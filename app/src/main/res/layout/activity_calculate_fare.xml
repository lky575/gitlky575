<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context="com.example.lky575.parkingmanager.CalculateFare">

    <View
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/searchLayout"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/Txt_carNumber"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/carnumber">
        </ImageView>

        <EditText
            android:background="@drawable/emptystroke"
            android:id="@+id/Edt_carNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:ems="8"
            android:hint="차량 번호를 입력."
            android:inputType="text"
            android:textColor="#ff000000"
            android:textColorHint="#ff777777" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/searchbutton"
            android:onClick="onsearchButtonClicked"/>
    </LinearLayout>

    <View
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/enterLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Txt_Enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/enter" />

        <EditText
            android:id="@+id/Edt_startHour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/emptystroke"
            android:ems="2"
            android:inputType="number"
            android:textColor="#ff000000"
            android:textAlignment="textEnd"/>

        <ImageView
            android:id="@+id/Txt_startHour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hour" />

        <EditText
            android:id="@+id/Edt_startMinute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/emptystroke"
            android:ems="2"
            android:inputType="number"
            android:textColor="#ff000000"
            android:textAlignment="textEnd"/>

        <ImageView
            android:id="@+id/Txt_startMinute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minute" />
    </LinearLayout>

    <View
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/exitLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Txt_Exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/exit" />

        <EditText
            android:id="@+id/Edt_endHour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/emptystroke"
            android:ems="2"
            android:inputType="number"
            android:textColor="#ff000000"
            android:textAlignment="textEnd"/>

        <ImageView
            android:id="@+id/Txt_endHour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hour" />

        <EditText
            android:id="@+id/Edt_endMinute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/emptystroke"
            android:ems="2"
            android:inputType="number"
            android:textColor="#ff000000"
            android:textAlignment="textEnd"/>

        <ImageView
            android:id="@+id/Txt_EndMinute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minute" />
    </LinearLayout>

    <View
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/fareButton"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="oncalculateButtonClicked"
            android:background="@drawable/calculator"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <View
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/fareLayout"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/emptystroke">

            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <View
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/coins" />

                <TextView
                    android:id="@+id/Fare"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="0원"
                    android:textColor="#5C2E14" />

                <View
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

        <View
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>
